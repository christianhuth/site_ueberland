				</el>
			</ROOT>
		</show>
		
		<newsletter>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_tab.newsletter</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					
					<!-- Layout -->
					<settings.newsletter.layout>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_newsletter.layout</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0">Layout A - einspaltig</numIndex>
										<numIndex index="1">a1</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">Layout A - zweispaltig</numIndex>
										<numIndex index="1">a2</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">Layout B - einspaltig</numIndex>
										<numIndex index="1">b1</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">Layout B - zweispaltig</numIndex>
										<numIndex index="1">b2</numIndex>
									</numIndex>
									<numIndex index="4">
										<numIndex index="0">Layout C - Angebote</numIndex>
										<numIndex index="1">c1</numIndex>
									</numIndex>
									<numIndex index="5">
										<numIndex index="0">Layout C - Frei</numIndex>
										<numIndex index="1">c2</numIndex>
									</numIndex>
								</items>
							</config>
							<onChange>reload</onChange>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Angebot->newsletter</displayCond>
						</TCEforms>
					</settings.newsletter.layout>

					<!-- Headline -->
					<!--
					<settings.newsletter.headline>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_newsletter.headline</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</settings.newsletter.headline>
					-->

					<!-- Introduction -->
					<settings.newsletter.introduction>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_newsletter.introduction</label>
							<config>
								<enableRichtext>1</enableRichtext>
								<type>text</type>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Angebot->newsletter</displayCond>
						</TCEforms>
					</settings.newsletter.introduction>

					<!-- Arrangements -->
					<settings.newsletter.arrangements>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_newsletter.arrangements</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>tx_ueberland_domain_model_angebot</allowed>
								<size>3</size>
								<maxitems>5</maxitems>
								<minitems>0</minitems>
							</config>
							<displayCond>
								<AND>
									<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Angebot->newsletter</numIndex>
									<OR>
										<numIndex index="0">FIELD:newsletter.settings.newsletter.layout:=:a1</numIndex>
										<numIndex index="1">FIELD:newsletter.settings.newsletter.layout:=:a2</numIndex>
										<numIndex index="2">FIELD:newsletter.settings.newsletter.layout:=:b1</numIndex>
										<numIndex index="3">FIELD:newsletter.settings.newsletter.layout:=:b2</numIndex>
										<numIndex index="4">FIELD:newsletter.settings.newsletter.layout:=:c1</numIndex>
									</OR>
								</AND>
							</displayCond>
						</TCEforms>
					</settings.newsletter.arrangements>
					
					<!-- StartImage -->
					<settings.newsletter.startimage>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_newsletter.startimage</label>
							<config>
								<type>inline</type>
								<foreign_table>sys_file_reference</foreign_table>
								<foreign_field>uid_foreign</foreign_field>
								<foreign_sortby>sorting_foreign</foreign_sortby>
								<foreign_table_field>tablenames</foreign_table_field>
								<foreign_match_fields>
									<!-- this will be stored in sys_file_reference.fieldname -->
									<fieldname>settings.newsletter.startimage</fieldname>
								</foreign_match_fields>
								<foreign_label>uid_local</foreign_label>
								<foreign_selector>uid_local</foreign_selector>
								<maxitems>1</maxitems>
								<overrideChildTca>
									<columns>
										<uid_local>
											<config>
												<appearance>
													<elementBrowserType>file</elementBrowserType>
													<elementBrowserAllowed>jpg,png,svg,jpeg,gif</elementBrowserAllowed>
												</appearance>
											</config>
										</uid_local>
									</columns>
								</overrideChildTca>
								<filter>
									<userFunc>TYPO3\CMS\Core\Resource\Filter\FileExtensionFilter->filterInlineChildren</userFunc>
									<parameters>
										<allowedFileExtensions>jpg,png,svg,jpeg,gif</allowedFileExtensions>
										<disallowedFileExtensions></disallowedFileExtensions>
									</parameters>
								</filter>
								<appearance>
									<useSortable>1</useSortable>
									<headerThumbnail>
										<field>uid_local</field>
										<width>45</width>
										<height>45c</height>
									</headerThumbnail>
									<enabledControls>
										<info>1</info>
										<new>0</new>
										<dragdrop>1</dragdrop>
										<sort>0</sort>
										<hide>1</hide>
										<delete>1</delete>
									</enabledControls>
								</appearance>
							</config>
							<displayCond>
								<AND>
									<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Angebot->newsletter</numIndex>
									<OR>
										<numIndex index="0">FIELD:newsletter.settings.newsletter.layout:=:b1</numIndex>
										<numIndex index="1">FIELD:newsletter.settings.newsletter.layout:=:b2</numIndex>
										<numIndex index="2">FIELD:newsletter.settings.newsletter.layout:=:c1</numIndex>
										<numIndex index="3">FIELD:newsletter.settings.newsletter.layout:=:c2</numIndex>
									</OR>
								</AND>
							</displayCond>
						</TCEforms>
					</settings.newsletter.startimage>

					<!-- Layout C2 Headline -->
					<settings.newsletter.c2.headline>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_newsletter.c2.headline</label>
							<config>
								<type>input</type>
							</config>
							<displayCond>
								<AND>
									<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Angebot->newsletter</numIndex>
									<numIndex index="1">FIELD:newsletter.settings.newsletter.layout:=:c2</numIndex>
								</AND>
							</displayCond>
						</TCEforms>
					</settings.newsletter.c2.headline>

					<!-- Layout C2 Subheadline -->
					<settings.newsletter.c2.subheadline>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_newsletter.c2.subheadline</label>
							<config>
								<type>input</type>
							</config>
							<displayCond>
								<AND>
									<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Angebot->newsletter</numIndex>
									<numIndex index="1">FIELD:newsletter.settings.newsletter.layout:=:c2</numIndex>
								</AND>
							</displayCond>
						</TCEforms>
					</settings.newsletter.c2.subheadline>

					<!-- Layout C2 Text -->
					<settings.newsletter.c2.text>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_newsletter.c2.text</label>
							<config>
								<enableRichtext>1</enableRichtext>
								<type>text</type>
							</config>
							<displayCond>
								<AND>
									<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Angebot->newsletter</numIndex>
									<numIndex index="1">FIELD:newsletter.settings.newsletter.layout:=:c2</numIndex>
								</AND>
							</displayCond>
						</TCEforms>
					</settings.newsletter.c2.text>
					
					<!-- Layout C2 Images -->
					<settings.newsletter.c2.images>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_newsletter.c2.images</label>
							<config>
								<type>inline</type>
								<foreign_table>sys_file_reference</foreign_table>
								<foreign_field>uid_foreign</foreign_field>
								<foreign_sortby>sorting_foreign</foreign_sortby>
								<foreign_table_field>tablenames</foreign_table_field>
								<foreign_match_fields>
									<!-- this will be stored in sys_file_reference.fieldname -->
									<fieldname>settings.newsletter.c2.images</fieldname>
								</foreign_match_fields>
								<foreign_label>uid_local</foreign_label>
								<foreign_selector>uid_local</foreign_selector>
								<overrideChildTca>
									<columns>
										<uid_local>
											<config>
												<appearance>
													<elementBrowserType>file</elementBrowserType>
													<elementBrowserAllowed>jpg,png,svg,jpeg,gif</elementBrowserAllowed>
												</appearance>
											</config>
										</uid_local>
									</columns>
								</overrideChildTca>
								<filter>
									<userFunc>TYPO3\CMS\Core\Resource\Filter\FileExtensionFilter->filterInlineChildren</userFunc>
									<parameters>
										<allowedFileExtensions>jpg,png,svg,jpeg,gif</allowedFileExtensions>
										<disallowedFileExtensions></disallowedFileExtensions>
									</parameters>
								</filter>
								<appearance>
									<useSortable>1</useSortable>
									<headerThumbnail>
										<field>uid_local</field>
										<width>45</width>
										<height>45c</height>
									</headerThumbnail>
									<enabledControls>
										<info>1</info>
										<new>0</new>
										<dragdrop>1</dragdrop>
										<sort>0</sort>
										<hide>1</hide>
										<delete>1</delete>
									</enabledControls>
								</appearance>
							</config>
							<displayCond>
								<AND>
									<numIndex index="0">FIELD:sDEF.switchableControllerActions:=:Angebot->newsletter</numIndex>
									<numIndex index="1">FIELD:newsletter.settings.newsletter.layout:=:c2</numIndex>
								</AND>
							</displayCond>
						</TCEforms>
					</settings.newsletter.c2.images>
					
					<!-- Show Footer -->
					<settings.newsletter.showfooter>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_newsletter.showfooter</label>
							<config>
								<default>1</default>
								<type>check</type>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Angebot->newsletter</displayCond>
						</TCEforms>
					</settings.newsletter.showfooter>
					
				</el>
			</ROOT>
