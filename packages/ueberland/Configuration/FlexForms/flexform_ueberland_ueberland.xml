						</TCEforms>
					</settings.backPid>

					<!-- Inquiry Mail -->
					<settings.show.inquiry.mail>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_show.inquiryMail</label>
							<config>
								<type>input</type>
								<size>6</size>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Angebot->show</displayCond>
						</TCEforms>
