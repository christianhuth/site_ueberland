								<internal_type>db</internal_type>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<size>1</size>
								<type>group</type>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Angebot->show</displayCond>
