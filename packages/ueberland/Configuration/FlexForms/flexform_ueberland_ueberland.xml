		<list>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_tab.list</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>

					<!-- PID List Page -->
					<settings.listPid>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_list.listPid</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Angebot->list</displayCond>
						</TCEforms>
					</settings.listPid>
					
					<!-- Filter -->
					<settings.showFilters>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_list.showFilters</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0">LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_list.showFilters.yes</numIndex>
										<numIndex index="1">1</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_list.showFilters.no</numIndex>
										<numIndex index="1">0</numIndex>
									</numIndex>
								</items>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Angebot->list</displayCond>
						</TCEforms>
					</settings.showFilters>

					<!-- order -->
					<settings.orderBy>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_list.orderBy</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0"></numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_list.orderBy.uid</numIndex>
										<numIndex index="1">uid</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_list.orderBy.tstamp</numIndex>
										<numIndex index="1">tstamp</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_list.orderBy.title</numIndex>
										<numIndex index="1">title</numIndex>
									</numIndex>
								</items>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Angebot->list</displayCond>
						</TCEforms>
					</settings.orderBy>

					<!-- order direction  -->
					<settings.orderDirection>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_list.orderDirection</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0"></numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_list.orderDirection.asc</numIndex>
										<numIndex index="1">asc</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_list.orderDirection.desc</numIndex>
										<numIndex index="1">desc</numIndex>
									</numIndex>
								</items>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Angebot->list</displayCond>
						</TCEforms>
					</settings.orderDirection>

					<!-- Limit Start -->
					<settings.limit>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_list.limit</label>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>num</eval>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Angebot->list</displayCond>
						</TCEforms>
					</settings.limit>

					<!-- Offset -->
					<settings.offset>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_list.offset</label>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>num</eval>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Angebot->list</displayCond>
						</TCEforms>
					</settings.offset>

					<settings.list.paginate.itemsPerPage>
						<TCEforms>
							<label>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_list.itemsPerPage</label>
							<config>
								<type>input</type>
								<size>2</size>
							</config>
							<displayCond>FIELD:sDEF.switchableControllerActions:=:Angebot->list</displayCond>
						</TCEforms>
					</settings.list.paginate.itemsPerPage>
				</el>
			</ROOT>
		</list>
		
		<show>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_tab.show</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>

					<!-- PID Detail Page -->
