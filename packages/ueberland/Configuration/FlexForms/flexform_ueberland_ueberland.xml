									</numIndex>
									<numIndex index="6">
										<numIndex index="0">LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_general.mode.angebot_highlight</numIndex>
										<numIndex index="1">Angebot->highlight</numIndex>
									</numIndex>
									<numIndex index="7">
										<numIndex index="0">LLL:EXT:ueberland/Resources/Private/Language/locallang_be.xlf:flexforms_general.mode.angebot_inquiry</numIndex>
										<numIndex index="1">Angebot->inquiry</numIndex>
									</numIndex>
									<numIndex index="8">
